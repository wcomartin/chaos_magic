<div class="container mx-auto px-4">
  <%= render 'shared/header' %>

  <div class="flex justify-between items-center mb-4">
    <h1 class="text-2xl font-bold">Turn History for Game #<%= @game.id %></h1>
    <%= link_to 'Back to Game', @game, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <div class="grid grid-cols-1 gap-4">
    <% @turns.each_with_index do |turn, index| %>
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-3 flex items-center justify-between">
        <div>
          <h2 class="text-lg font-semibold">Turn <%= @turns.count - index %></h2>
        </div>
        <div class="text-right">
          <p class="text-gray-600 dark:text-gray-400 text-sm">Card: <%= turn.card.title %></p>
          <p class="text-gray-600 dark:text-gray-400 text-xs">Damage: <%= turn.damage_roll %>, Chaos: <%= turn.chaos_roll %></p>
          <p class="text-gray-600 dark:text-gray-400 text-xs">Time: <%= turn.created_at.strftime("%B %d, %Y %H:%M") %></p>
        </div>
      </div>
    <% end %>
  </div>

  
</div>
