<div class="container mx-auto px-4">
  <%= render 'shared/header' %>

  <h1 class="text-2xl font-bold mb-4">Games</h1>

  <%= link_to 'Create New Game', new_game_path, class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded mb-4 inline-block" %>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <% @games.each do |game| %>
      <%= link_to game_path(game), class: "block" do %>
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 transform transition duration-300 hover:scale-105 hover:shadow-lg">
          <h2 class="text-xl font-semibold mb-2">Game #<%= game.id %></h2>
          <p class="text-gray-600 dark:text-gray-400 mb-1">Players: <%= game.people.map(&:name).join(', ') %></p>
          <p class="text-gray-600 dark:text-gray-400 mb-1">Created: <%= game.created_at.strftime("%Y-%m-%d %H:%M") %></p>
          <p class="text-gray-600 dark:text-gray-400">Status: <%= game.status.capitalize %></p>
        </div>
      <% end %>
    <% end %>
  </div>
</div>