<div class="absolute w-full h-full backface-hidden flex flex-col bg-stone-800 rounded-xl [backface-visibility:hidden]">
  <div class="flex-grow m-1.5 bg-stone-500 rounded-lg border border-stone-600 flex flex-col overflow-hidden">
    <!-- Card Header -->
    <div class="px-3 py-1 bg-gradient-to-r from-stone-400 via-stone-300 to-stone-400 flex justify-between items-center border-b-2 border-black">
      <h2 class="text-md font-bold text-black tracking-wide"><%= title %></h2>
<!--        <div class="w-6 h-6 bg-stone-400 rounded-full border-2 border-stone-800 flex items-center justify-center font-sans font-bold text-black">-->
<!--          1-->
<!--        </div>-->
    </div>

    <!-- Card Image -->
    <div class="h-48 shrink-0 bg-stone-900 border-y-2 border-black mx-2 mt-1 flex items-center justify-center overflow-hidden">
      <% if image_url %>
        <img src="<%= image_url %>" alt="<%= title %>" class="w-full h-full object-cover">
      <% else %>
        <p class="text-stone-500">[No Image]</p>
      <% end %>
    </div>

    <!-- Card Type/Subtitle -->
    <div class="px-3 py-0.5 bg-gradient-to-r from-stone-400 via-stone-300 to-stone-400 mx-2 border-b-2 border-black">
      <h3 class="text-sm font-bold text-black tracking-wide"><%= type %></h3>
    </div>

    <!-- Card Body -->
    <div class="flex flex-col justify-between flex-grow m-2 p-3 bg-stone-200/80 dark:bg-stone-300/80 text-sm text-black overflow-y-auto rounded-md border border-stone-400 shadow-inner">
      <p class="whitespace-pre-line"><%= body %></p>
      <p class="italic border-t-1">"<%= flavor %>"</p>
    </div>
  </div>
</div>